<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.AnimeMapper">
    <select id="selectAnimeInfo" resultType="com.itheima.pojo.AnimeInfo">
        select * from anime_info
    </select>
    <select id="selectById" resultType="com.itheima.pojo.AnimeInfo">
        select * from anime_info where id = #{id}
    </select>
</mapper>